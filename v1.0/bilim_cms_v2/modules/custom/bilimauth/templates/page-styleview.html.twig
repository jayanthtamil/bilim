    </ul>
  </div>
   <div class="folder-context-menu context-menu">
    <ul>
      <li onclick="openRenamePopup(event)" class='course-rename'>Rename</li>
      <li onclick="onDeleteStyleFolder(event)">Delete</li>
      <li>Copy</li>
      <li>Move</li>
    </ul>
  </div>
</div>
<!-- context menu -->

